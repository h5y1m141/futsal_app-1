<h1>練馬コート情報</h1>
<div class="center hero-unit">
<table class="table table-striped">
<thead>
  <th width="20%">イベント名称</th>
  <th width="20%">日時</th>
  <th width="20%">募集人数</th>
  <th width="20%">残り</th>
</thead>
<tbody>
<% @events_nerima.zip(@pages_nerima).each do |event_nerima,page_nerima| %>
	<tr>
		<td><a href = '<%= page_nerima.nerima_url %>'><%= event_nerima.name %></a></td>
    <td><%= event_nerima.start_date %></td>
    <td><%= event_nerima.participants %></td>
    <td><%= event_nerima.unoccupied_seats %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
